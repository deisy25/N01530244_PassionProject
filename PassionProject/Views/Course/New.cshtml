@model IEnumerable<PassionProject.Models.CourseDto>

@{
    ViewBag.Title = "Create";
}

<h2>Add Teacher</h2>
<form action="/Course/Create" method="POST">
    <div>
        <label>Name:</label>
        <input type="text" name="CourseName" placeholder="English" />
    </div>
    <div>
        <label>Level</label>
        <input type="text" name="Level" placeholder="Basic 1" />
    </div>
    <div>
        <label>Hours</label>
        <input type="text" name="Hours" placeholder="45" />
    </div>
    <div>
        <label>Price:</label>
        <input type="text" name="Price" placeholder="395" />
    </div>
    <div>
        <label>Day:</label>
        <input type="text" name="Day" placeholder="Monday & Friday " />
    </div>
    <div>
        <label>Time:</label>
        <input type="text" name="Time" placeholder="06.00-09.00 PM " />
    </div>
    <div>
        <label>Description:</label>
        <input type="text" name="Description" placeholder="it helps you to acquire the basic " />
    </div>
    <div>
        <input type="submit" value="Add Course" />
    </div>
</form>

